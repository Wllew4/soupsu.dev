{
	"files": [
		"ts/main.ts"
	],
	"include": [
		"ts/*.ts"
	],
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
		"baseUrl": ".",
        "outDir": "bin/client",
        "rootDir": ".",
		"sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    }
}